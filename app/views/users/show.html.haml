%h1.font-bold.text-2xl.mb-4
  Created events by: #{current_user.email}

%p  
  - current_user.created_events.each do |event|
    %p  
    Event name: #{event.title}
    %p  
      Event date: #{event.date}
    %p  
      Event location: #{event.location}
    %p  
      Created by: #{event.creator.email}
    %br
  
  
%h1 
  = link_to "Create event", new_event_path  
%h2.mt-4
  = link_to "Show Attended events", show_attended_events_path